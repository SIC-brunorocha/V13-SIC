<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

<template id="mrp_production_order_report_custom_inherit" inherit_id="bi_odoo_process_costing_manufacturing.mrp_production_order_report_custom">
    <xpath expr="//table[@id='overhead_cost']" position="after">
        <h2>Direct Material Cost By Product</h2><br/>
        <table style="border-collapse: collapse;width: 100%;" class="table table-condensed">
            <thead>
		        <tr>
			        <th>Operation</th>
			        <th>Product</th>
			        <th>Planned Qty</th>
			        <th>Actual Qty</th>
			        <th>UOM</th>
			        <th>Cost/Unit</th>
			        <th>Total Cost</th>
			        <th>Total Actual Cost</th>
		        </tr>
            </thead>  
		    <tbody class="material_by_product_tbody">
		        <t t-set="material_by_total" t-value="0.0" />
		        <t t-set="actual_material_by_total" t-value="0.0" />
		        <t t-foreach="o.pro_by_material_cost_ids" t-as="pro_by_material">	 
                <tr>
		            <td>
			            <span t-field="pro_by_material.by_operation_id.name" />
		            </td>
                    <td>
			            <span t-field="pro_by_material.by_product_id.name" />
		            </td>
		            <td>
			            <span t-field="pro_by_material.by_planned_qty" />
		            </td>
		            <td>
			            <span t-field="pro_by_material.by_actual_qty" />
		            </td>
		            <td>
			            <span t-field="pro_by_material.by_uom_id.name" />
		            </td>
                    <td>
			            <span t-field="pro_by_material.by_cost" />
		            </td>
		            <td>
			            <span t-field="pro_by_material.by_total_cost" />
		            </td>
		            <td>
			            <span t-field="pro_by_material.by_total_actual_cost" />
		            </td>
		            <t t-set="material_by_total" t-value="material_by_total +int (pro_by_material.by_total_cost) " />
		            <t t-set="actual_material_by_total" t-value="actual_material_by_total +int (pro_by_material.by_total_actual_cost) " />
	            </tr>
	            </t>
	            <tr>
	                <td></td>
	                <td></td>
	                <td></td>
	                <td></td>
	                <td></td>
				    <td style="text-align: right;font-weight: bold;">Total Cost :</td>
				    <td style="text-align: center; vertical-align: right;font-weight: bold;">
					    <span t-esc="material_by_total" />
				    </td>
				    <td style="text-align: center; vertical-align: right;font-weight: bold;">
					    <span t-esc="actual_material_by_total" />
				    </td>
		        </tr>
		    </tbody>
        </table>    
        
